<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Ramdom Quote App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Randomquoteapp">
        <activity
            android:name=".IntentActivity"
            android:exported="true"
            android:label="@string/title_activity_intent"
            android:theme="@style/Theme.Randomquoteapp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Quote"
            android:exported="false"
            android:label="@string/title_activity_quote"
            android:theme="@style/Theme.Randomquoteapp" />
        <activity
            android:name=".QuoteRepository"
            android:exported="false"
            android:label="@string/title_activity_quote_repository"
            android:theme="@style/Theme.Randomquoteapp" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Randomquoteapp"/>
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/home_title"
            android:theme="@style/Theme.Randomquoteapp"/>
        <activity
            android:name=".AddQuoteActivity"
            android:exported="true"
            android:label="@string/add_quote_title"
            android:theme="@style/Theme.Randomquoteapp"/>


    </application>

</manifest>